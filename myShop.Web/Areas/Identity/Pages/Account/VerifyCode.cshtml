@page
@model myShop.Web.Areas.Identity.Pages.Account.VerifyCodeModel
@{
    ViewData["Title"] = "Account Verification";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg rounded-3">
                <div class="card-body p-4">
                    <h4 class="text-center mb-4 text-primary">
                        We've sent a 6-digit code to your email.<br />
                        Please enter it below to verify your account.
                    </h4>

                    <form method="post" id="verifyForm">
                        <input type="hidden" asp-for="UserId" />
                        <input type="hidden" asp-for="ReturnUrl" />

                        <div class="mb-3">
                            <label asp-for="Input.Code" class="form-label"></label>
                            <input asp-for="Input.Code" class="form-control text-center fs-4" maxlength="6" />
                            <span asp-validation-for="Input.Code" class="text-danger"></span>
                        </div>

                        <button type="submit" id="verifyBtn" class="btn btn-primary w-100">
                            <span id="btnText">Verify</span>
                            <span id="btnLoader" class="spinner-border spinner-border-sm d-none ms-2"></span>
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById("verifyForm").addEventListener("submit", function () {
            const btn = document.getElementById("verifyBtn");
            document.getElementById("btnText").innerText = "Verifying...";
            document.getElementById("btnLoader").classList.remove("d-none");
            btn.disabled = true;
        });
    </script>
}



